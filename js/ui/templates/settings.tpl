<div class="background fullscreen">
	<div class="dialog dialog-abscenter">
		<div class="form-horizontal">
			<h1>Settings</h1>
			<div class="name control-group">
				<div class="control-label">Name:</div><div class="control-input"><%- name %></div>
			</div>
			
			<h1>Controls</h1>
			<div class="forward-key control-group">
				<div class="control-label">Move forward:</div><div class="control-input"><%- forwardKey %></div>
			</div>
			<div class="left-key control-group">
				<div class="control-label">Move left:</div><div class="control-input"><%- leftKey %></div>
			</div>
			<div class="back-key control-group">
				<div class="control-label">Move back:</div><div class="control-input"><%- backKey %></div>
			</div>
			<div class="right-key control-group">
				<div class="control-label">Move right:</div><div class="control-input"><%- rightKey %></div>
			</div>
			<div class="up-key control-group">
				<div class="control-label">Jump:</div><div class="control-input"><%- upKey %></div>
			</div>
		</div>

		<div class="footer">
			<div class="button back">Back</div>
		</div>
	</div>
</div>